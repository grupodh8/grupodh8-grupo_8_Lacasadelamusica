<article class="articulo-1">
    <section class="seccion-imagen">
        <img class="imagen-articulo" src="/images/products/<%= product.image %>" alt="imagen de articulo">
    </section>
    <section class="seccion-contenido">
        <div class="box-articulo">
            <i class="fas fa-truck" id="shipping"></i>
            <div class="precio-descuento-articulo">
                <p class="precio-articulo">$<%= product.price %>
                </p>
                <p class="descuento-articulo"></p>
            </div>
            <div>
                <h3 class="descripcion-articulo">
                    <%= product.name %>
                </h3>
                <button class="boton-compra"><a href="/products/<%= product.id %>">Ver mas</a></button>
                <button class="boton-carro"><a href="/cart"><i id="iconos-barra"
                            class="fas fa-shopping-cart"></i></a></button>
            </div>
        </div>
    </section>
</article>