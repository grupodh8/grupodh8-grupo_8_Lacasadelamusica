<%- include('./partials/head', {title: 'Tu perfil - La Casa de la Musica' }) %>

    <body>
        <%- include('./partials/header') %>

            <main>
                <div class="contenedor-perfil">
                    <img class="avatar-perfil" src="/images/users/<%= user.avatar %>">

                    <h1 class="h1-profile">Bienvenido, <%= user.first_name %>!</h1>
                    <h2 class="h2-profile"><i class="fas fa-user-circle"></i> Tu informacion:</h2>

                    <p><i class="fas fa-id-card"></i> Nombre: <%= user.first_name %> <%= user.last_name %></p>
                    <p><i class="fas fa-map-marked-alt"></i> Direccion: <%= user.address %>, <%= user.city %> - <%= user.zip %></p>
                    <p><i class="far fa-envelope"></i> Correo electronico: <%= user.email %></p>

                </div>
            </main>
            <%- include('./partials/footer') %>
    </body>

    </html>