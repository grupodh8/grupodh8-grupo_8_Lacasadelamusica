<%- include('./partials/head', {title: 'Detalle de producto - La Casa de la Musica' }) %>

    <body>
        <%- include('./partials/header') %>
            <main>
                <h3 class="titulo-login">EDITAR PRODUCTO</h3>
                <form action="/products/<%= productToEdit.id %>?_method=PUT" method="POST" class="formulario-login" enctype="multipart/form-data">
                    <div class="primera-parte">
                        <div class="casillero">
                            <label for="name" class="label-1">Nombre del producto:</label>
                            <input type="text" name="name" class="input-1" value="<%= productToEdit.name %>">
                        </div>
                        <div class="casillero">
                            <label for="price" class="label-1">Precio del producto:</label>
                            <input type="text" name="price" class="input-1" value="<%= productToEdit.price %>">
                        </div>
                    </div>
                    <div class="casillero">
                        <label for="category" class="label-1">Categoría:</label>
                        <select name="category" id="category" class="input-select">
                            <option value="">Elegí</option>
                            <option value="main-top" <%= productToEdit.category == 'main-top' ? 'selected' : '' %>>Nuevos Productos</option>
                            <option value="main-bottom" <%= productToEdit.category == 'main-bottom' ? 'selected' : '' %>>Ofertas Destacadas</option>
                        </select>
                    </div>
                    <div class="casillero">
                        <label for="classification" class="label-1">Clasificacion:</label>
                        <select name="classification" id="classification" class="input-select">
                            <option value="">Elegí</option>
                            <option value="guitars" <%= productToEdit.clasificacion == 'guitars' ? 'selected' : '' %>>Guitarras</option>
                            <option value="bass" <%= productToEdit.clasificacion == 'bass' ? 'selected' : '' %>>Bajos</option>
                            <option value="accesories" <%= productToEdit.clasificacion == 'accesories' ? 'selected' : '' %>>Accesorios</option>
                            <option value="audio" <%= productToEdit.clasificacion == 'audio' ? 'selected' : '' %>>Audio</option>
                            <option value="services" <%= productToEdit.clasificacion == 'services' ? 'selected' : '' %>>Servicios</option>
                        </select>
                    </div>
                    <div class="casillero">
                        <label for="type" class="label-1">Tipo de producto:</label>
                        <input type="text" name="type" class="input-1" value="<%= productToEdit.tipo %>">
                    </div>
                    <div class="casillero">
						<label for="description" class="label-1">Descipción:</label>
						<textarea name="description" id="description" class="input-textarea"><%= productToEdit.description %></textarea>
					</div>

                    <div class="linea-ciudad">
                        <div class="casillero">
                            <label for="imagen1" class="label-1">Imagen para home page:</label>
                            <input type="file" name="imagen1" class="input-file">
                        </div>
                    </div>
                    <div class="casillero">
                        <button type="submit" class="boton-login">GUARDAR PRODUCTO</button>
                    </div>
                </form>
                <form action="/products/<%= productToEdit.id %>?_method=DELETE"
                    method="POST" class="formulario-login">
                    <button type="submit" class="boton-delete">ELIMINAR PRODUCTO</button>
                </form>
            </main>






            <%- include('./partials/footer') %>
    </body>

    </html>